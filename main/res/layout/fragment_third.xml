<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".thirdFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/guide_v_10"
        />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.875"
            android:id="@+id/guide_v_87.5"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.125"
            android:id="@+id/guide_v_12.5"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"
            android:id="@+id/guide_v_15"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"
            android:id="@+id/guide_v_85"
            />
       <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/guide_v_90"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.475"
        android:id="@+id/guide_v_47.5"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.525"
        android:id="@+id/guide_v_52.5"
        />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_25dp"
            app:cardCornerRadius="@dimen/margin_30dp"
            app:cardBackgroundColor="#B5FFFFFF"
            android:id="@+id/CardBackground"
            app:layout_constraintStart_toStartOf="@id/guide_v_12.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_v_87.5"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/margin_10dp"
            app:cardCornerRadius="@dimen/margin_30dp"
            app:cardBackgroundColor="#66FFFFFF"
            app:layout_constraintStart_toStartOf="@id/guide_v_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_v_90"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/CardForeground"
            app:cardCornerRadius="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_40dp"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guide_v_85">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guideline60"
                    android:orientation="horizontal"
                    />
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline50"
                    app:layout_constraintGuide_percent="0.5"
                    android:orientation="vertical"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/tvBalance"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="hydcddd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="15sp"
                    android:text="hydcddd"
                    android:id="@+id/tvIncomeFinal"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/guideline60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline50"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/tvExpenseFinal"
                    android:textSize="15sp"
                    android:text="hydcddd"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/guideline60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline50"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondPrimary"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/secondPrimary"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintEnd_toEndOf="@id/guide_v_47.5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/CardForeground"
        app:layout_constraintStart_toStartOf="@id/guide_v_10"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/download"
            android:scaleType="fitXY"
            android:contentDescription="@string/add_income_img"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"

           />




    </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tvIncome"
            app:layout_constraintTop_toBottomOf="@+id/cvIncome"
            app:layout_constraintStart_toStartOf="@+id/guide_v_10"
            app:layout_constraintEnd_toEndOf="@id/guide_v_47.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/add_income"
            android:textColor="@color/white"
            android:textSize="20sp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondPrimary"
        app:strokeColor="@color/secondPrimary"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/CardForeground"
        app:layout_constraintEnd_toEndOf="@id/guide_v_90"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guide_v_52.5"
        android:clickable="true"
        android:layout_marginTop="@dimen/margin_30dp"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:scaleType="fitXY"
            android:src="@drawable/download_expense"
            android:contentDescription="@string/add_income_img"
           />





    </com.google.android.material.card.MaterialCardView>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cvExpense"
            app:layout_constraintStart_toStartOf="@+id/guide_v_52.5"
            app:layout_constraintEnd_toEndOf="@id/guide_v_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/add_expense"
            android:textColor="@color/white"
            android:textSize="20sp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondPrimary"
        app:strokeColor="@color/secondPrimary"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintEnd_toEndOf="@id/guide_v_47.5"
        app:layout_constraintStart_toStartOf="@id/guide_v_10"
        app:layout_constraintTop_toBottomOf="@+id/tvIncome"
        app:layout_constraintVertical_bias="1.0"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:src="@drawable/download_hisyory"
            android:contentDescription="@string/add_income_img" />



    </com.google.android.material.card.MaterialCardView>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cvHistory"
            app:layout_constraintStart_toStartOf="@+id/guide_v_10"
            app:layout_constraintEnd_toEndOf="@id/guide_v_47.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/history"
            android:textColor="@color/white"
            android:textSize="20sp" />




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/finalData"
            app:layout_constraintTop_toBottomOf="@id/cvHistory"
            android:layout_marginTop="@dimen/margin_30dp"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            app:layout_constraintEnd_toEndOf="@id/guide_v_90"
            android:textColor="@color/secondPrimary"
            android:textSize="20sp"
            />











</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



